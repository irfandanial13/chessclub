# Chess Club - Hostinger Optimized Security & URL Rewriting
RewriteEngine On

# Hostinger-specific optimizations
<IfModule mod_headers.c>
    # Security headers optimized for Hostinger
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # Content Security Policy for Hostinger
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://code.jquery.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'; frame-src 'none'; object-src 'none';"
    
    # Remove server signature (Hostinger compatible)
    Header unset Server
    Header unset X-Powered-By
    Header unset X-AspNet-Version
    Header unset X-AspNetMvc-Version
</IfModule>

# Prevent direct access to sensitive files (Hostinger optimized)
<Files "*.php">
    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
    Allow from ::1
</Files>

# Allow access to index.php
<Files "index.php">
    Order Allow,Deny
    Allow from all
</Files>

# Block sensitive file types (Hostinger specific)
<FilesMatch "\.(env|config|ini|log|sql|bak|backup|old|tmp|swp|swo|DS_Store|Thumbs\.db|composer\.(json|lock)|package\.json|yarn\.lock|npm-debug\.log|\.gitignore|\.htaccess|\.htpasswd)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Block hidden files and directories
<FilesMatch "^\.">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Prevent access to sensitive directories (Hostinger paths)
RedirectMatch 403 ^/app/?$
RedirectMatch 403 ^/system/?$
RedirectMatch 403 ^/writable/?$
RedirectMatch 403 ^/vendor/?$
RedirectMatch 403 ^/tests/?$
RedirectMatch 403 ^/\.git/?$
RedirectMatch 403 ^/\.svn/?$
RedirectMatch 403 ^/node_modules/?$

# Hostinger-specific URL rewriting
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Custom URL rewriting for chess club (Hostinger optimized)
RewriteRule ^login/?$ index.php?route=auth/login [L,QSA]
RewriteRule ^register/?$ index.php?route=auth/register [L,QSA]
RewriteRule ^logout/?$ index.php?route=auth/logout [L,QSA]
RewriteRule ^dashboard/?$ index.php?route=dashboard/index [L,QSA]
RewriteRule ^admin/?$ index.php?route=admin/dashboard [L,QSA]
RewriteRule ^admin/users/?$ index.php?route=admin/manageUsers [L,QSA]
RewriteRule ^admin/events/?$ index.php?route=admin/manageEvents [L,QSA]
RewriteRule ^admin/merchandise/?$ index.php?route=admin/manageMerchandise [L,QSA]
RewriteRule ^admin/leaderboard/?$ index.php?route=admin/manageLeaderboard [L,QSA]
RewriteRule ^admin/orders/?$ index.php?route=admin/manageOrders [L,QSA]
RewriteRule ^admin/payments/?$ index.php?route=admin/managePayments [L,QSA]
RewriteRule ^events/?$ index.php?route=events/index [L,QSA]
RewriteRule ^events/my-events/?$ index.php?route=events/myEvents [L,QSA]
RewriteRule ^events/join/([0-9]+)/?$ index.php?route=events/joinEvent/$1 [L,QSA]
RewriteRule ^events/confirm-join/([0-9]+)/?$ index.php?route=events/confirmJoin/$1 [L,QSA]
RewriteRule ^merchandise/?$ index.php?route=merchandise/index [L,QSA]
RewriteRule ^merchandise/cart/?$ index.php?route=merchandise/cart [L,QSA]
RewriteRule ^merchandise/checkout/?$ index.php?route=merchandise/checkout [L,QSA]
RewriteRule ^merchandise/bank-payment/?$ index.php?route=merchandise/bankPayment [L,QSA]
RewriteRule ^merchandise/card-payment/?$ index.php?route=merchandise/cardPayment [L,QSA]
RewriteRule ^leaderboard/?$ index.php?route=leaderboard/index [L,QSA]
RewriteRule ^contact/?$ index.php?route=contact/index [L,QSA]
RewriteRule ^about/?$ index.php?route=pages/about [L,QSA]
RewriteRule ^policy/?$ index.php?route=pages/policy [L,QSA]
RewriteRule ^membership/?$ index.php?route=membership/index [L,QSA]
RewriteRule ^membership/payment-upload/?$ index.php?route=membership/paymentUpload [L,QSA]

# Disable directory browsing
Options -Indexes

# Prevent access to sensitive files
<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files>

# Custom error pages (Hostinger compatible)
ErrorDocument 404 /index.php?route=errors/404
ErrorDocument 403 /index.php?route=errors/403
ErrorDocument 500 /index.php?route=errors/500

# Hostinger performance optimizations
<IfModule mod_deflate.c>
    # Enable compression for better performance
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml+rss
</IfModule>

# Cache control for Hostinger
<IfModule mod_expires.c>
    ExpiresActive on
    
    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/ico "access plus 1 year"
    ExpiresByType image/icon "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # Documents
    ExpiresByType text/plain "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/x-shockwave-flash "access plus 1 month"
</IfModule>

# Hostinger-specific security
<IfModule mod_rewrite.c>
    # Block bad bots
    RewriteCond %{HTTP_USER_AGENT} ^$ [OR]
    RewriteCond %{HTTP_USER_AGENT} ^(java|curl|wget) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} ^.*(libwww-perl|curl|wget|python|nikto|scan) [NC,OR]
    RewriteCond %{HTTP_USER_AGENT} ^.*(winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Prevent hotlinking (optional - uncomment if needed)
# RewriteCond %{HTTP_REFERER} !^$
# RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?yoursite.com [NC]
# RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,L]

# Hostinger PHP settings (if needed)
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_vars 3000
    php_value memory_limit 256M
</IfModule>
